{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.16.0/.schema/devbox.schema.json",
  "packages": [
    "cargo@latest"
  ],
  "shell": {
    "init_hook": [
      "echo \"Welcome to the devbox environment!\""
    ],
    "scripts": {
      "test": [
        "echo \"Error: no test specified\" && exit 1"
      ],
      "prod": [
        "target/release/map-generator \"$@\""
      ],
      "cw": [
        "echo \"Launching Exterminatus on the worlds directory...\"",
        "find ./worlds -mindepth 1 -not -name '.gitignore' -delete"
      ]
    }
  }
}